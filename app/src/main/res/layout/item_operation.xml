<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/keyLine_4">

        <ImageView
            android:id="@+id/operation_image"
            android:layout_width="@dimen/transaction_image_size"
            android:layout_height="56dp"
            android:contentDescription="@string/item_operation_image_default_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/operation_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyLine_4"
            android:layout_marginEnd="@dimen/keyLine_4"
            android:textAppearance="@style/TextAppearance.MyTheme.OperationTitle"
            app:layout_constraintEnd_toStartOf="@+id/operation_amount"
            app:layout_constraintStart_toEndOf="@+id/operation_image"
            app:layout_constraintTop_toTopOf="@+id/operation_image"
            tools:text="Корм коту" />

        <TextView
            android:id="@+id/operation_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyLine_4"
            android:layout_marginTop="@dimen/keyLine_2"
            android:layout_marginEnd="@dimen/keyLine_4"
            android:textAppearance="@style/TextAppearance.MyTheme.Subtitle2"
            app:layout_constraintEnd_toStartOf="@+id/operation_amount"
            app:layout_constraintStart_toEndOf="@+id/operation_image"
            app:layout_constraintTop_toBottomOf="@+id/operation_title"
            tools:text="Расход" />

        <TextView
            android:id="@+id/operation_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MyTheme.Headline6"
            app:layout_constraintBottom_toBottomOf="@+id/operation_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/operation_title"
            tools:text="+45"
            tools:textColor="@color/color_text_positive" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>